@page
@model kontakty.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}
<head>
    <!--
    <script src=".\js\Kontakty.js"></script>
    <style src=".\css\Kontakty.css"></style>
    -->
</head>
<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="tableKontakty">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kontakt[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kontakt[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kontakt[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kontakt[0].Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Kontakt) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
